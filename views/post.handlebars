<link rel="stylesheet" href="/styles/addStyles.css" media="screen" title="no title" charset="utf-8">
<title>Post a Comment</title>
<div class="container">
    <div class="top-container">
        <a href="../../"><p>Back to Home</p></a>
    </div>
    <div class="jumbotron add-post">

        <h4>Post <span id="idPost">{{id}}</span> <i class="fas fa-comment-dots"></i></h4>

        <hr class="my-4">


    <form class="add-post" action="script.cgi" onSubmit="return validateForm()">

        <div class="form-group">
    
            <textarea class="form-control" id="userPost" rows="3" placeholder="Post here."></textarea>
        </div>

    </form>

        
        <button class="btn btn-warning btn-lg" id="add" role="button">add</button>
        <div class="invalid"></div>

    </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
